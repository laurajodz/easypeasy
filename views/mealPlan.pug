doctype html
head
    meta(charset='utf-8')
    |
    meta(name='viewport', content='width=device-width, initial-scale=1')
    |
    title My Meal Plan #{name}
    |
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    |
    link(href='https://use.fontawesome.com/releases/v5.0.6/css/all.css', rel='stylesheet')
    |
    script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
    |
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
    |
    link(href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css', rel='stylesheet')
    |
    link(href='https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css', rel='stylesheet', type='text/css')
    |
    link(href='/stylesheets/style.css', rel='stylesheet', type='text/css')
    |
    link(href='https://fonts.googleapis.com/css?family=Lato:300|Pacifico', rel='stylesheet')
    |
    body.mealplan-page
        .nav
            a(href='/index.html')
                i.fas.fa-home(style='color:white')
        |
        header(role='banner')
        |
        div.go
            a#gotolist(href='/shoppingList/view/' + shoppingList._id) Go to shopping list
        |
        div.plan
            h1.mp This week's Meal Plan
            h2.date #{name}
            |
            div.planContainer
            |
            each recipe in recipeNames
                div.name
                    h2.rname= recipe.name
                    img(src=recipe.image)
                    p.source= recipe.source
                    - url = recipe.url;
                    |
                    div.link
                        a#recipelink(href=url) Go to recipe
        |
        .buttongroup
            //button#gobackbtn Edit Meal Plan
            //|
            button#previous See All Meal Plans
            |
            button#newmpbtn Start New Meal Plan
            |
            script(src='/javascripts/client.js')
